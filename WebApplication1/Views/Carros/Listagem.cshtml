@using Microsoft.EntityFrameworkCore.Metadata

@{
    ViewData["Title"] = "Carros Disponíveis";
}

<div class="container mt-4">
    <h2>Carros para Aluguel</h2>

    <div class="row">
        @foreach (var carro in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@carro.ImagemUrl" class="card-img-top" alt="@carro.Modelo">
                    <div class="card-body">
                        <h5 class="card-title">@carro.Modelo</h5>
                        <p class="card-text">A partir de R$@carro.PrecoPorDia/dia</p>
                        <a href="/Carros/Detalhes/@carro.Id" class="btn btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
