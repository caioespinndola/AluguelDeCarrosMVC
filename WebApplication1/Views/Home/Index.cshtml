@using Microsoft.EntityFrameworkCore.Metadata
@{
    ViewData["Title"] = "Home";
}
<div class="container text-center mt-5">

    <h3>Bem-vindo à CarRentals</h3>

<img src="@Url.Content("~/NovaPasta2/carro.png")" alt="Carro"/>

    <h4>Alugue o carro ideal para sua viagem</h4>

    <div class="row mt-4">
        <div class="col-md-4">
            <a href="/Carros">
                <div class="card shadow">
                    <img src="@Url.Content("~/NovaPasta2/suv.png")" alt="Carro" />
                    <div class="card-body">
                        <h5 class="card-title">SUV</h5>
                        <p class="card-text">Explore SUVs disponíveis.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Carros">
                <div class="card shadow">
                    <img src="@Url.Content("~/NovaPasta2/sedan.png")" alt="Carro" />
                    <div class="card-body">
                        <h5 class="card-title">Sedan</h5>
                        <p class="card-text">Conforto para sua viagem.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Carros">
                <div class="card shadow">
                    <img src="@Url.Content("~/NovaPasta2/Hatch.png")" alt="Carro" />
                    <div class="card-body">
                        <h5 class="card-title">Hatch</h5>
                        <p class="card-text">Econômicos e práticos.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
